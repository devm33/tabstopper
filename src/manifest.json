{
    "manifest_version": 2,
    "name": "TabStopper",
    "description": "Stop opening the same pages!",
    "version": "0.2",
    "icons": {
        "128": "icon_128.png"
    },
    "background": {
        "persistent": false,
        "page": "background.html"
    },
    "offline_enabled": true,
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "page_action": {
        "default_title": "This page is open in multiple tabs",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage"
    ]
}
